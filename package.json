{
  "name": "math_chat",
  "version": "1.0.0",
  "description": "Users can calculate math problems and see other useds equations in real time",
  "main": "server.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/detanracnier/math_chat.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/detanracnier/math_chat/issues"
  },
  "homepage": "https://github.com/detanracnier/math_chat#readme",
  "dependencies": {
    "dotenv": "^9.0.1",
    "express": "^4.17.1",
    "socket.io": "^4.0.2"
  },
  "devDependencies": {
    "concurrently": "^6.1.0",
    "nodemon": "^2.0.7"
  }
}
